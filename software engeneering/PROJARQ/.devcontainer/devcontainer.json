{
	"name": "PROJARQ",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VARIANT": "15",
			"INSTALL_NODE": "true",
			"NODE_VERSION": "lts/*",
			"INSTALL_MAVEN": "true",
		}
	},
	"settings": {
		"terminal.integrated.profiles.linux": {
			"bash": {
				"path": "bash",
				"icon": "terminal-bash"
			}
		},
		"java.home": "/docker-java-home"
	},
	"extensions": [
		"vscjava.vscode-java-pack",
		"humao.rest-client",
		"ms-vsliveshare.vsliveshare"
	],
	"postStartCommand": "bash -i /check.sh > .availability.log"
}